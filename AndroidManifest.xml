<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pack.list"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".UserListAssignmentActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
 
        <activity
            android:name=".UserListViewActivity"
            android:label="@string/textView" >
            <intent-filter>
                <action android:name="android.intent.action.USERLIST" />

                <category android:name="android.intent.category.INFO" />
            </intent-filter>
        </activity>
 
        <activity
            android:name=".DisplayUserDetailsActivity" >
            <intent-filter>
                <action android:name="android.intent.action.DISPLAYUSERDETAILS" />

                <category android:name="android.intent.category.INFO" />
            </intent-filter>
        </activity>
        
    </application>

</manifest>